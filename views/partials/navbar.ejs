<nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
        <a class="navbar-brand" href="/"><img width="100%" height="100%" src="/imgs/logo.png"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-supported-content">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbar-supported-content">
            <div class="mr-auto"></div>
            <% if(session.userId) { %>
            <div class="navbar-font-size mt-1">
                <a class="mr-1" data-toggle="modal" data-target="#writePostModal" href style="color: white"><i class="fas fa-pencil-alt mr-2 brand-color"></i><%= __('navbar.new.post') %></a>
                <a class="mr-1" href="/user/" style="color: white"><i class="fas fa-user mr-2 brand-color"></i><%= __('navbar.profile') %></a>
                <a class="mr-1" href="#" onclick="$('#header-logout-form').submit()" style="color: white"><i class="fas fa-sign-out-alt mr-1 brand-color"></i><%= __('navbar.logout') %></a>
                <form id="header-logout-form" action="/user/logout/" method="post"></form>
            </div>
            <% } else { %>
            <div class="d-block">
                <form id="header-login-form" action="/user/login" method="post">
                    <div class="input-group mb-1 mr-sm-1" style="font-family: PT Sans, sans">
                        <input type="text" class="form-control form-control-sm" placeholder="<%= __('navbar.username.placeholder') %>" name="username">
                        <input type="password" class="form-control form-control-sm" placeholder="<%= __('navbar.password.placeholder') %>" name="password">
                    </div>
                </form>
                <a class="d-inline float-md-right mr-1" href="/user/register" style="color: white"><i class="fas fa-registered mr-1 brand-color"></i><%= __('navbar.register') %></a>
                <a class="d-inline float-md-right mr-sm-2" href="#" onclick="$('#header-login-form').submit()" style="color: white"><i class="fas fa-sign-in-alt mr-1 brand-color"></i><%= __('navbar.login') %></a>
            </div>
            <% } %>
        </div>

        <!-- Write new post modal modal-dialog-centered -->
        <div class="modal fade" id="writePostModal" tabindex="-1" role="dialog" aria-labelledby="writePostModalLabel" aria-hidden="true" style="font-family: PT Sans, sans">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="writePostModalLabel"><%= __('navbar.new.post') %></h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    </div>
                    <div class="modal-body">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-12 d-flex flex-column p-2">
                                    <a href="/post/new/simple" role="button" class="btn btn-secondary btn-lg align-middle"><i class="fas fa-cog mr-1"></i><%= __('navbar.new.post.simple') %></a>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 d-flex flex-column p-2">
                                    <a href="/post/new/advanced" role="button" class="btn btn-light btn-lg align-middle"><i class="fas fa-cogs mr-1"></i><%= __('navbar.new.post.advanced') %></a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal"><i class="fas fa-window-close mr-1"></i><%= __('navbar.new.post.close') %></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</nav>