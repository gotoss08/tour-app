<% include ../partials/header_start.ejs %>

<meta name="description" content="">
<meta name="author" content="">

<link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
<link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
<link href="/css/clean-blog.css" rel="stylesheet">
<link rel="stylesheet" href="/css/post.css">

<% include ../partials/header_end.ejs %>

<header class="masthead" >
    <div class="overlay" style="background-image: url(<%= country.img %>);"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="post-heading">
                    <h1><%= post.title %></h1>
                    <h2 class="subheading">
                        <a class="text-white" href="#"><%= __(country.name) %></a>
                    </h2>
                    <span class="meta"><%= __('post.posted.by') %>
                <a href="/user/<%= user.username %>"><%= user.username %></a>
                <%= dateformat(post.createdAt, "в dddd в h:MM:ss, d mmmm yyyy") %></span>
                    <hr>

                    <% for(var i = 0; i < post.topics.length; i++) { %>
                        <% var topic = post.topics[i]; %>
                        <a class="text-white" href="#<%= topic.topicId %>"><%= topics[topic.topicId] %></a>
                        <% if(i < post.topics.length-1) { %>,<% } %>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Post Content -->
<article>
    <div class="container mb-5">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto post-body">
                <h1 class="color-black mt-2 mb-4"><%= post.title %></h1>
                <%- post.body %>
                <% for(var i = 0; i < post.topics.length; i++) { %>
                    <% var topic = post.topics[i]; %>
                    <h2 id="<%= topic.topicId %>"><a href="#<%= topic.topicId %>"><%= topics[topic.topicId] %></a></h2>
                    <p><%- topic.body %></p>
                <% } %>
            </div>
        </div>
    </div>
</article>

<% include ../partials/footer.ejs %>