<% include ../partials/header_start.ejs %>

<meta name="description" content="">
<meta name="author" content="<%= user.username %>">

<link href="https://fonts.googleapis.com/css?family=Lora:400,400i&amp;subset=cyrillic" rel="stylesheet">
<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,800&amp;subset=cyrillic" rel="stylesheet">
<link href="/css/clean-blog.css" rel="stylesheet">
<link rel="stylesheet" href="/css/post.css">

<% include ../partials/header_end_nonav.ejs %>
<header class="masthead" >
    <div class="overlay" style="background-image: url(<%= country.img %>);"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="post-heading">
                    <h1><%= post.title %></h1>
                    <h2 class="subheading">
                        <a class="text-white" href="/post/all?country=<%= country.name %>"><%= __(country.name) %></a>
                    </h2>
                    <span class="meta">
                        Опубликовано
                        <a href="/post/all?country=<%= country.name %>&sort=date&date=<%= post.createdAt.toISOString() %>"><%= dateformat(post.createdAt, "date") %></a>
                        в
                        <%= dateformat(post.createdAt, "time") %>
                        пользователем
                        <a href="/user/<%= user.username %>"><%= user.username %></a>
                    </span>
                    <hr>
                    <% for(var i = 0; i < post.topics.length; i++) { %>
                        <% var topic = post.topics[i]; %>
                        <a class="text-white" href="#<%= topic.topicId %>"><%= topics[topic.topicId] %></a>
                        <% if(i < post.topics.length-1) { %>,<% } %>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</header>
<% include ../partials/navbar.ejs %>

<!-- Post Content -->
<article>
    <div class="container mb-5">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto post-body">
                <h1 class="color-black mt-2 mb-4"><%= post.title %></h1>
                <%- post.body %>
                <% for(var i = 0; i < post.topics.length; i++) { %>
                    <% var topic = post.topics[i]; %>
                    <h2 id="<%= topic.topicId %>"><a href="#<%= topic.topicId %>"><%= topics[topic.topicId] %></a></h2>
                    <p><%- topic.body %></p>
                <% } %>
                <% if(post.voteId) { %>
                    <hr>
                    <% include ../partials/vote.ejs %>
                <% } %>
            </div>
        </div>
    </div>
</article>

<% include ../partials/footer.ejs %>