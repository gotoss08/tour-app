<nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
        <a class="navbar-brand" href="/">
            <img width="100%" height="100%" src="/imgs/logo.png">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <div class="mr-auto"></div>

            <% if(session.userId) { %>
            <div class="navbar-font-size mt-1">
                <a class="mr-1" data-toggle="modal" data-target="#writePostModal" href="" style="color: white"><i class="fa fa-pencil mr-2 brand-color" aria-hidden="true"></i><%= __('navbar.new.post') %></a>
                <a class="mr-1" href="/user/" style="color: white"><i class="fa fa-user mr-2 brand-color" aria-hidden="true"></i><%= __('navbar.profile') %></a>
                <a class="mr-1" href="#" onclick="$('#header-logout-form').submit()" style="color: white"><i class="fa fa-sign-out mr-1 brand-color" aria-hidden="true"></i><%= __('navbar.logout') %></a>
                <form id="header-logout-form" action="/user/logout/" method="post"></form>
            </div>
            <% } else { %>
            <div class="d-block mt-2">
                <form class="form d-inline" action="/user/login" method="post">
                    <div class="input-group mb-1 mr-sm-1">
                        <input type="text" class="form-control form-control-sm" placeholder="<%= __('navbar.username.placeholder') %>" name="username">
                        <input type="password" class="form-control form-control-sm" placeholder="<%= __('navbar.password.placeholder') %>" name="password">
                    </div>
                    <button type="submit" class="btn btn-dark mt-1 btn-sm float-md-right"><i class="fa fa-sign-in mr-1" aria-hidden="true"></i><%= __('navbar.login') %></button>
                </form>
                <form class="form d-inline float-md-right mr-md-1" action="/user/register" method="get">
                    <button type="submit" class="btn btn-dark mt-1 btn-sm"><i class="fa fa-registered mr-1" aria-hidden="true"></i><%= __('navbar.register') %></button>
                </form>
            </div>

            <% } %>
        </div>


        <!-- Write new post modal modal-dialog-centered -->
        <div class="modal fade" id="writePostModal" tabindex="-1" role="dialog" aria-labelledby="writePostModalLabel" aria-hidden="true" style="font-family: Open Sans;">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="writePostModalLabel"><%= __('navbar.new.post') %></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12 d-flex flex-column p-2">
                            <a href="/post/new/simple" role="button" class="btn btn-secondary btn-lg align-middle"><%= __('navbar.new.post.simple') %></a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 d-flex flex-column p-2">
                            <a href="/post/new/advanced" role="button" class="btn btn-light btn-lg align-middle"><%= __('navbar.new.post.advanced') %></a>
                        </div>
                    </div>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal"><%= __('navbar.new.post.close') %></button>
              </div>
            </div>
          </div>
        </div>
    </div>
</nav>