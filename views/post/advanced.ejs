<% include ../partials/full_header.ejs %>

<!--<link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">-->
<!--<script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>-->
<div class="container mt-5">
    <div class="row">
        <div id="new-post-footer" class="position-sticky position-fixed fixed-bottom">
            <div class="col-12 col-md-6 form-group d-flex flex-row float-right">
                <select id="countrySelect" class="custom-select mr-1" name="country" required >
                    <option value="" disabled selected hidden>* <%= __('post.country.select') %></option>
                    <% for(var i = 0; i < countries.length; i++) { %>
                    <% var country = countries[i]; %>
                    <option value="<%= country._id %>"><%= __(country.name) %></option>
                    <% } %>
                </select>
                <button type="button" class="btn btn-outline-success"><%= __('post.submit') %></button>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <form id="newPostForm" action="/post/new" method="post">
                <div class="form-group">
                    <input type="text" id="new-post-title-input" class="form-control post-title" name="title" placeholder="* <%= __('post.title.placeholder') %>" required autofocus autocomplete="off" value="<%= locals.post ? post.title : ''%>">
                </div>
                <div class="form-group">

                    <textarea id="new-post-body-input" class="form-control post-body" name="body" rows="10" placeholder="* <%= __('post.body.placeholder') %>" required autocomplete="off"></textarea>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer.ejs %>