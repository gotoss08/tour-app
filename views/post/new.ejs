<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <form id="newPostForm" action="/post/new" method="post">
                <div class="form-group">
                    <input type="text" id="new-post-title-input" class="form-control post-title" name="title" placeholder="<%= __('post.title.placeholder') %>" required autofocus autocomplete="off" value="<%= locals.post ? post.title : ''%>">
                </div>
                <div class="form-group">
                    <textarea id="new-post-body-input" class="form-control post-body" name="body" rows="10" placeholder="<%= __('post.body.placeholder') %>" required autocomplete="off"></textarea>
                </div>
                <div id="new-post-footer" class="position-sticky fixed-bottom d-flex flex-row-reverse">
                    <div class="form-group d-flex flex-row">
                        <select id="countrySelect" class="custom-select float-right align-self-center mr-1" name="country" required >
                            <option value="" disabled selected hidden><%= __('post.country.select') %></option>
                            <% for(var i = 0; i < countries.length; i++) { %>
                            <% var country = countries[i]; %>
                            <option value="<%= country._id %>"><%= __(country.name) %></option>
                            <% } %>
                        </select>
                        <button type="submit" class="btn btn-outline-success float-right align-self-center"><%= __('post.submit') %></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

