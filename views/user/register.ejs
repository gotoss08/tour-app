<% include ../partials/header_start.ejs %>
<link rel="stylesheet" href="/css/user/register.css">
<% include ../partials/header_end.ejs %>
<div class="card info-card card-shadow">
    Some info body
</div>
<div class="container page-content-container d-flex justify-content-center">
    <div class="row mt-5">
        <div class="col-12">
            <div class="card register-card card-shadow">
                <h3 class="text-center mb-4">Регистрация</h3>
                <input id="username" class="card-bg-hover" type="text" placeholder="Имя пользователя.." autocomplete="off">
                <input id="email" class="card-bg-hover" type="text" placeholder="Email..." autocomplete="off">
                <hr>
                <input id="password1" class="card-bg-hover" type="text" placeholder="Пароль..."  autocomplete="off">
                <input id="password2" class="card-bg-hover" type="text" placeholder="Повторите пароль..." autocomplete="off">
                <hr>
                <input id="avatar" class="card-bg-hover" type="file" accept=".jpg, .jpeg, .png" placeholder="Загрузите аватар" autocomplete="off">
                <hr>
                <button class="default-button card-bg-hover">Зарегестрироваться</button>
            </div>
        </div>
    </div>
</div>
<script src="/js/user/register.js"></script>
