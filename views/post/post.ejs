<% include ../partials/header_start.ejs %>

<meta name="description" content="">
<meta name="author" content="">

<link href="/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
<link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
<link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
<link href="/css/clean-blog.css" rel="stylesheet">

<% include ../partials/header_end.ejs %>

<header class="masthead" >
    <div class="overlay" style="background-image: url(<%= country.img %>);"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="post-heading">
                    <h1><%= post.title %></h1>
                    <h2 class="subheading">Problems look mighty small from 150 miles up</h2>
                    <span class="meta">Posted by
                <a href="/user/<%= user.username %>"><%= user.username %></a>
                on August 24, 2017</span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Post Content -->
<article>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto post-body">
                <%- toMarkdownHelper(post.body) %>
            </div>
        </div>
    </div>
</article>

<% include ../partials/footer.ejs %>