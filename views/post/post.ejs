<% include ../partials/header_start.ejs %>

<meta name="description" content="">
<meta name="author" content="<%= user.username %>">

<link href="https://fonts.googleapis.com/css?family=Lora:400,400i&amp;subset=cyrillic" rel="stylesheet">
<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,800&amp;subset=cyrillic" rel="stylesheet">

<link href="/css/post.css" rel="stylesheet">

<% include ../partials/header_end.ejs %>

<!-- Post Content -->
<article>
    <div class="container mb-5">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto post-body">
                <h1 class="mt-4 mb-2" id="<%= urlSlug(post.title) %>"><a href="#<%= urlSlug(post.title) %>"><%- post.title %></a></h1>
                <small class="text-muted">
                    <span class=""><a href="/post/all?country=<%= country.name %>&sort=date&date=<%= post.createdAt.toISOString() %>"><%= dateformat(post.createdAt, "date") %></a> Ð²
                    <span style="color: black;"><%= dateformat(post.createdAt, "time") %></span></span>
                    <span class="float-right"><a href="/user/<%= user.username %>"><%= user.username %></a></span>
                </small>
                <% if(topics.length) { %>
                    <hr>
                    <div class="tags d-block ">
                        <% for(var i = 0; i < topics.length; i++) { %>
                            <% var topic = topics[i]; %>
                            <a href="#<%= urlSlug(topic.title) %>"><i class="fas fa-tag"></i> <%- topic.title %></a>
                            <% if(i < topics.length-1) { %>,<% } %>
                        <% } %>
                    </div>
                    <hr>
                <% } %>
                <div class="mt-3">
                    <%- post.body %>
                    <% for(var i = 0; i < topics.length; i++) { %>
                        <% var topic = topics[i]; %>
                        <h1 id="<%= urlSlug(topic.title) %>"><a href="#<%= urlSlug(topic.title) %>"><%- topic.title %></a></h1>
                        <%- topic.body %>
                    <% } %>
                    <% if(post.voteId) { %>
                        <hr>
                        <% include ../partials/vote.ejs %>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</article>

<% include ../partials/footer.ejs %>