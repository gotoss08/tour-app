<% include ../partials/header_start.ejs %>

<% include ../partials/header_end.ejs %>


<div class="container mt-5">
    <div class="row mt-1 mb-5">
        <div class="col-12">
            <h1 class="text-center"><%= __('post.all.showing.results') %><em><%= __(country.name) %></em> <a href="/"><small class="text-muted"><%= __('post.all.change.country') %></small></a></h1>
        </div>
    </div>
    <div class="row">    
        <% for(var i = 0; i < posts.length; i++) { %>
            <% var post = posts[i]; %>
            <div class="col-md-6 col-sm d-inline mb-3">
                <div class="card" style="width: 100%; height: 100%;">
                    <img class="card-img-top" src="http://hola-espana.ru/wp-content/uploads/2013/03/alicante.jpg" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title"><a href="/post/<%= post._id %>" ><%= post.title %></a></h5>
                        <p class="card-text"><%- cropText(post.body) %></p>
                    </div>
                </div>
            </div> 
        <% } %>
    </div>
</div>

<% include ../partials/footer.ejs %>